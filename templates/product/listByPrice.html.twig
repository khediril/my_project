{% extends 'base.html.twig' %}

{% block title %}Liste des produits par prix{% endblock %}

{% block body %}
<div class="container">
  <h1>Liste des produits Par prix</h1>
  {% for message in app.flashes('notice') %}
    <div class="flash-notice">
       
        <div class="alert alert-success" role="alert">
   {{ message }}
</div>
    </div>
{% endfor %}
 <div class="row row-cols-1 row-cols-md-2 g-4">
  {% for p in products %}
  <div class="col">
    <div class="card">
      <a href="{{path('app_product_detail',{'id' : p.id})}}"><img src="{{asset('images/iset.png')}}"  class="card-img-top" alt="..."></a>
      <div class="card-body">
        <h5 class="card-title">{{ p.name }}:{{ p.id }}</h5>
        <p class="card-text">{{p.price}}</p>
        <p><a href="{{path('app_product_delete',{'id' : p.id})}}">Supprimer</a></p>
        
        <p><a href="{{path('app_product_detail',{'id' : p.id})}}">Detail</a></p>

      </div>
    </div>
  </div>
    
  {% endfor %}
  </div>
 </div> 
 





  




{% endblock %}
